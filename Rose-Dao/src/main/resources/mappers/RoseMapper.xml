<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+接口名 -->
<mapper namespace="com.nf.theroseshop.dao.RoseDao">
    <!--查看全部的数据-->
    <select id="flowerAllData" resultType="Rose">
        select * from rose
    </select>
    <!--鲜花模糊查询和分页-->
    <select id="getAll" resultType="Rose">
        SELECT * FROM rose
        <trim prefix="where" prefixOverrides="and|or">
            <if test="rose_name!=null and rose_name!=''">
                or rose_name like concat(concat('%',#{rose_name}),'%')
            </if>
            <if test="rose_name!=null and rose_name!=''">
                or rose_price like concat(concat('%',#{rose_name}),'%')
            </if>
            <if test="rose_name!=null and rose_name!=''">
                or rose_stock like concat(concat('%',#{rose_name}),'%')
            </if>
            <if test="rose_name!=null and rose_name!=''">
                or rose_sale like concat(concat('%',#{rose_name}),'%')
            </if>
        </trim>
        order by rose_id desc
        limit #{page},#{limit}
    </select>

    <!--添加鲜花-->
    <insert id="insert" parameterType="Rose">
      insert into rose(rose_code,rose_name,rose_content,rose_price,rose_reason,rose_composition,rose_story,rose_explain,rose_stock,rose_sale,rose_smallPirture)
      values (#{rose_code},#{rose_name},#{rose_content},#{rose_price},#{rose_reason},#{rose_composition},#{rose_story},#{rose_explain},#{rose_stock},#{rose_sale},#{rose_smallPirture})
    </insert>

    <!--修改鲜花-->
    <update id="updata" parameterType="Rose">
      update rose
      <set>
          <if test="rose_code!=null and rose_code!=''">
              rose_code=#{rose_code},
          </if>
          <if test="rose_name!=null and rose_name!=''">
              rose_name=#{rose_name},
          </if>
          <if test="rose_content!=null and rose_content!=''">
              rose_content=#{rose_content},
          </if>
          <if test="rose_price!=null and rose_price!=''">
              rose_price=#{rose_price},
          </if>
          <if test="rose_reason!=null and rose_reason!=''">
              rose_reason=#{rose_reason},
          </if>
          <if test="rose_composition!=null and rose_composition!=''">
              rose_composition=#{rose_composition},
          </if>
          <if test="rose_story!=null and rose_story!=''">
              rose_story=#{rose_story},
          </if>
          <if test="rose_explain!=null and rose_explain!=''">
              rose_explain=#{rose_explain},
          </if>
          <if test="rose_stock!=null and rose_stock!=''">
              rose_stock=#{rose_stock},
          </if>
          <if test="rose_sale!=null and rose_sale!=''">
              rose_sale=#{rose_sale},
          </if>
          <if test="rose_smallPirture!=null and rose_smallPirture!=''">
              rose_smallPirture=#{rose_smallPirture},
          </if>
      </set>
      where rose_id=#{rose_id}
    </update>

    <!--单删除鲜花-->
    <delete id="deleteid">
      delete from rose where rose_id=#{rose_id}
    </delete>

    <!--多删除鲜花-->
    <delete id="deleteids"  parameterType="java.lang.String">
       delete from rose
       where rose_id in
       <foreach collection="ids" open="(" item="rose_id" separator="," close=")">
          #{rose_id}
       </foreach>
    </delete>
</mapper>